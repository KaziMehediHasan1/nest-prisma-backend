generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Role start===========================================================
enum UserRole {
  ADMIN
  VENDOR
  PLANNER
}
// User Role end=============================================================

// File Type start===========================================================
enum FileType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}
// File Type end=============================================================

// User Instance start=======================================================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(PLANNER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// User Instance end=========================================================

// File Instance start=======================================================

model FileInstance {
  id        String   @id @default(uuid())
  name      String
  fileId    String @unique
  path      String
  createdAt DateTime @default(now())
  expiresAt DateTime
  bucket    String
  type      FileType
}

// File Instance end=========================================================
